<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please click the button to provide todays attendance."
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:id="@+id/textpresent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_present"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textpresent"
        android:textSize="25sp"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_attendance"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Check Attendance"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/text_verification"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:text="Enter the Verification code" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        />

</RelativeLayout>