<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            />

        <Button
            android:id="@+id/submit_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendarView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Mark Present"
            android:textSize="18sp" />

        <Button
            android:id="@+id/check_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_button"
            android:layout_centerHorizontal="true"
            android:text="Check Attendance"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text_verification"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/submit_present"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter the Verification Code"
            android:inputType="number" />

        <Button
            android:id="@+id/verify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_verification"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Submit"
            android:textSize="18sp"
            android:textStyle="bold"

            />

</RelativeLayout>